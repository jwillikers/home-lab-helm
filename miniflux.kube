[Unit]
Description=Miniflux RSS feed reader
Before=local-fs.target
RequiresMountsFor=%h/container-volumes/miniflux-db-data

[Kube]
Yaml=%h/Projects/home-lab-helm/miniflux.yaml
Network=podman.network
RemapUsers=keep-id

[Service]
Restart=always
TimeoutStartSec=infinity
TimeoutStopSec=1000

[Install]
WantedBy=multi-user.target default.target

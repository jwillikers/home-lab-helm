[Unit]
Description=Miniflux RSS feed reader
Before=local-fs.target
RequiresMountsFor=%t/containers %h/container-volumes/miniflux-db-data

[Kube]
Yaml=/home/jordan/Projects/home-lab-helm/miniflux.yaml
Network=podman1.network
RemapUsers=keep-id

[Service]
Restart=always
TimeoutStartSec=infinity
TimeoutStopSec=1000

[Install]
WantedBy=multi-user.target default.target

[Unit]
Description=Vaultwarden password manager server
Before=local-fs.target
RequiresMountsFor=%t/containers %h/container-volumes/vaultwarden-data %h/container-volumes/vaultwarden-db-data

[Kube]
Yaml=%h/Projects/home-lab-helm/vaultwarden/vaultwarden.yaml
Network=podman.network
UserNS=keep-id

[Service]
Restart=always
TimeoutStartSec=infinity
TimeoutStopSec=1000

[Install]
WantedBy=multi-user.target default.target

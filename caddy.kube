[Unit]
Description=Caddy reverse-proxy
Before=local-fs.target
RequiresMountsFor=%t/containers %h/container-volumes/caddy-data  %h/container-volumes/caddy-config

[Kube]
Yaml=/var/home/jordan/Projects/home-lab-helm/caddy.yaml
Network=podman1.network
# Run as non-root inside the container when Podman supports setting sysctls in Kubernetes YAML.
# RemapUsers: keep-id

[Service]
Restart=always

[Install]
WantedBy=multi-user.target default.target

[Unit]
Description=Immich Self-hosted Photo Solution
Before=local-fs.target
RequiresMountsFor=%t/containers %h/container-volumes/immich-immich-data %h/container-volumes/immich-postgresql-data

[Kube]
Yaml=%h/Projects/home-lab-helm/immich/immich.yaml
Network=podman.network
UserNS=keep-id

[Service]
Restart=always
TimeoutStartSec=15min
TimeoutStopSec=15min

[Install]
WantedBy=multi-user.target default.target
